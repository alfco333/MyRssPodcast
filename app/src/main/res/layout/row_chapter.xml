<?xml version="1.0" encoding="utf-8"?>
<com.alfco.myrsspodcast.views.ViewRowChapter xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_row_podcast">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ivLogo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/ivLogo"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvTitle"
        android:id="@+id/llData"
        android:padding="5dp"
        android:layout_toRightOf="@+id/ivLogo">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/ivLogo"
            android:layout_weight="1"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDuration"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/ivLogo"
            android:layout_weight="1"

            />
        </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btPlay"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="@string/detail_bt_play"
        android:layout_below="@+id/llData"
        android:layout_toRightOf="@+id/ivLogo"
        android:visibility="gone"/>





</com.alfco.myrsspodcast.views.ViewRowChapter>